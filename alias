# portable aliases
alias brettenv='source ~/.brettenv/bashrc' # should also be defined in ~/.bashrc
alias bmux='tmux -f ~/.brettenv/tmux.conf' # should also be defined in ~/.bashrc
alias l='ls -lFh'
alias la='l -a'
alias u='cd ../'
alias b='cd -'
alias c='echo -e "-\n-\n-\n-\n-\n"; clear'
alias s='echo -e "\n\n\n\n\n"'
alias pg='ping google.com'
alias vi='vim -u ~/.brettenv/vimrc'
alias vim='vim -u ~/.brettenv/vimrc'
alias vib='vim -u ~/.brettenv/vimrc'
alias mvim='mvim -u ~/.brettenv/vimrc -U ~/.brettenv/mvimrc'
alias gvim='gvim -u ~/.brettenv/vimrc -U ~/.brettenv/gvimrc'
alias nv='nvim'
alias rs='rails server -b 0.0.0.0'
alias rc='rails console'
alias rg='rails generate'
alias rgm='rails generate migration'
alias rdm='rake db:migrate --trace'
alias qf='find . -iname'
