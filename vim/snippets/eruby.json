{
  "each do w/variable": {
    "prefix": "ead",
    "body": [
      "<% ${1:enumerable}.each do |${2:variable}| %>$0",
      "<% end %>"
    ]
  },

  "for item in enumerable": {
    "prefix": "for",
    "body": [
      "<% for ${2:item} in ${1:enumerable} %>$0",
      "<% end %>"
    ]
  },

  "content_for block": {
    "prefix": "conf",
    "body": [
      "<% content_for :${1:head} do %>$0",
      "<% end %>"
    ]
  },

  "form_for block": {
    "prefix": "ff",
    "body": [
      "<%= form_for @${1:model} do |f| %>$0",
      "<% end %>"
    ]
  },

  "form_for with error messages": {
    "prefix": "ffe",
    "body": [
      "<% error_messages_for :${1:model} %>",
      "",
      "<%= form_for @${2:model} do |f| %>$0",
      "<% end %>"
    ]
  },

  "fields_for block": {
    "prefix": "fields",
    "body": [
      "<%= fields_for :${1:model}, @$1 do |${2:f}| %>$0",
      "<% end %>"
    ]
  },

  "if statement": {
    "prefix": "if",
    "body": [
      "<% if ${1:condition} %>$0",
      "<% end %>"
    ]
  },

  "if/else statement": {
    "prefix": "ife",
    "body": [
      "<% if ${1:condition} %>$2",
      "<% else %>$0",
      "<% end %>"
    ]
  },

  "elsif insertion": {
    "prefix": "eif",
    "body": ["<% elsif ${1:condition} %>$0"]
  }
}
